import csv

def convert_txt_to_csv(txt_file, csv_file):
    with open(txt_file, 'r') as file:
        reader = csv.reader(file, delimiter='\t')
        rows = list(reader)

    with open(csv_file, 'w', newline='') as file:
        writer = csv.writer(file)

        # Ajouter la première ligne avec les noms de colonnes
        header = rows[0]
        writer.writerow(header)

        # Écrire le reste des lignes
        writer.writerows(rows[1:])


convert_txt_to_csv('AVIONS.txt', 'AVIONS.csv')
convert_txt_to_csv('CLIENTS.txt', 'CLIENTS.csv')
convert_txt_to_csv('DEFCLASSES.txt', 'DEFCLASSES.csv')
convert_txt_to_csv('PILOTES.txt', 'PILOTES.csv')
convert_txt_to_csv('RESERVATIONS.txt', 'RESERVATIONS.csv')
convert_txt_to_csv('VOLS.txt', 'VOLS.csv')
